
<div class="stretch">
    <ul id="post-list" class="mt-2 rem-bullets">
        <li class="w-100 blog-item mt-4">
            <div class="w-100 card bg-light">
                <h5 class="card-header p-2">{{title}}</h5>
                <small class="text-muted p-1 pl-2">Posted on: {{ format_date createdAt}}</small>
                <div class="card-body">
                    <h5 class="card-title border-bottom">{{user.username}}</h5>
                    <p class="card-text p-1">{{content}}</p>
                    
                    <input type="text" class="comment-box comment-input" placeholder="Leave a comment...">
                    <button class="btn cust-btn btn-dark comment-btn">Reply</button>
                    <input type="hidden" class="blog-id" value="{{id}}">
                    
                    
                    
                </div>

                
                {{#if comments}}
                {{#each comments as |comment|}}
                <div class="list-group ml-3 mr-3 pb-2 " id="comments">
                    <div href="#" class="list-group-item list-group-item-action active">
                        <div class="d-flex w-100 justify-content-between">
                        <small class="mb-1">{{comment.user.username}}</small>
                        <small>{{ format_date comment.createdAt}}</small>
                        </div>
                        <p class="mb-1">{{comment.content}}</p>
                        <input type="hidden" class="com-userId" value="{{comment.user_id}}">
                        <button class="btn-danger del-com">ðŸ—‘</button>
                        <input type="hidden" id="com-id" value="{{comment.id}}">
                    </div>
                
                </div>
                {{/each}}
                {{/if}}
               
                
            </div>
            

        </li>
    </ul>
</div>
